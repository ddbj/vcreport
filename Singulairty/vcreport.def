BootStrap: library
From: ubuntu:16.04

%post
    apt -y update
    apt -y upgrade
    apt -y install python python3-pip ruby ruby-dev git build-essential zlib1g zlib1g-dev
    pip3 install --upgrade pip
    pip3 install cwlref-runner
    git clone https://github.com/tafujino/vcreport.git
    cd vcreport
    gem install bundler
    bundle install
    rake build
    gem install --local pkg/*.gem

%runscript
    vcreport "$@"

%labels
    Author fujino@edu.k.u-tokyo.ac.jp
